<div class="section">
<h1>Burgers Hot and Fresh!</h1>
<img alt="burger" src="../../assets/img/burger-icon.png">
<div class="container">
<div class="row">

    <div class="col-md-6">
    <h2>Burgers that are ready to eat!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devour}}
          {{> burgers/burger-block devour=true}}
        {{/unless}}
      {{/each}}
    </ul>
    </div>

    <div class="col-md-6">
    <h2>Burgers that have been devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#if sleepy}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
    </div>

</div>
</div>

<div class="container">
<div class="row">

  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h2>Add a New Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="ready">Ready?</label><br>
        <input type="radio" name="ready" value="1" checked> Ready!<br>
        <input type="radio" name="ready" value="0"> Awake
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
  <div class="col-md-3"></div>

</div>
</div>

</div>
